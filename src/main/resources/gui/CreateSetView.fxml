<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="gui.CreateSetController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Vokabelset-Editor">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <children>
                <Label text="Name des Sets:" />
                <TextField fx:id="setNameField" promptText="z.B. Englisch Grundwortschatz"
                    GridPane.columnIndex="1" />
                <Label text="Sprachen:" GridPane.rowIndex="1" />
                <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <ComboBox fx:id="lang1Combo" prefWidth="150.0" />
                        <Label text=" ↔ " />
                        <ComboBox fx:id="lang2Combo" prefWidth="150.0" />
                    </children>
                </HBox>
            </children>
        </GridPane>

        <Separator />

        <HBox spacing="10.0">
            <children>
                <TextField fx:id="vocab1Field" promptText="Wort Sprache 1" HBox.hgrow="ALWAYS" />
                <TextField fx:id="vocab2Field" promptText="Wort Sprache 2" HBox.hgrow="ALWAYS" />
                <Button onAction="#handleAddVocabulary" text="Hinzufügen"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
            </children>
        </HBox>

        <ListView fx:id="vocabListView" VBox.vgrow="ALWAYS" />

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button onAction="#handleDeleteSelected" text="Auswahl löschen"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="statusLabel" />
                <Button onAction="#handleSaveSet" prefWidth="120.0" text="Set Speichern" />
            </children>
        </HBox>
    </children>
</VBox>